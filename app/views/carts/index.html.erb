<p id="notice"><%= notice %></p>
<div class="title_cart">
  <h2> My cart<i class="fas fa-cart-arrow-down fa-x5"></i></h2>
</div>
<div class="container cart_Table">
  <div class="tabl-cart">
    <table class="table ">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Title</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @carts_user.each do |cart| %>
        <tr>
          <td><%= image_tag cart.activity.image_url, class:"img-50" %></td>
          <td><%= cart.activity.title %></td>
          <td><%= 1%></td>
          <td><%= cart.activity.price  %> $</td>
          <td><%= link_to  cart, method: :delete, data: { confirm: 'Are you sure?' } do%> <i class="fas fa-trash"></i>
            <%end%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<br>
<br>
<div class="btn_checkout">
  <%= link_to 'Proceed to checkout', new_activity_path, class: "btn btn-primary" %>
</div>