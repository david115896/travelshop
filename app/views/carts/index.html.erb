<p id="notice"><%= notice %></p>
<div class="title_cart">
  <h2> My cart <i class="fas fa-cart-arrow-down fa-2x"></i></h2>
</div>
<div class="container cart_Table">
  <div class="tabl-cart">
    <table class="table ">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Title</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @carts_user.each do |cart| %>
        <tr>
          <td><%= image_tag cart.activity.image_url, class:"img-50" %></td>
          <td><%= cart.activity.title %></td>
          <td><%= 1%></td>
          <td><%= cart.activity.price  %> $</td>
          <td><%= link_to  cart, method: :delete, data: { confirm: 'Are you sure?' } do%> <i class="fas fa-trash"></i>
            <%end%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <span>Amount: <%= @amount %>$</span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="A month's subscription"
            data-amount= <%= @amount*100 %>
            data-locale="auto"></script>
  <% end %>
  </div>
</div>