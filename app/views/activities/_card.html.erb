<div class="row">
    <div class="card m-2" style="width: 16rem;">
      <%= image_tag activity.illustration, class:"img_card" %>
      <p class="price"><small class="text-muted"><%=activity.price%> $</small></p>
      <div class="card-body">
        <h5 class="card-title"><%= activity.title %></h5>
        <%= link_to 'Show', activity, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_activity_path(activity), class: "btn btn-primary" %>
        <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-primary" %>
      </div>
    </div>
</div>
