<div class="row">
    <div class="card m-2 card_act" style="width: 16rem;">
      <%= image_tag activity.image_url, class:"img_card" %>
      <p class="price"><%=activity.price%> $</p>

        <h5 class="card-title title_act"><%= activity.title %></h5>
      <br>
      <div class="row button_row_act">
        <%= link_to 'Show', activity, class: "btn btn-primary button_act" %>
        <%= link_to 'Edit', edit_activity_path(activity), class: "btn btn-primary button_act" %>
        <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-primary" %>
      </div>
      <br>
    </div>
</div>