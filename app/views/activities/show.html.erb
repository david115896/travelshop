
<div class="container">
  <div class="card m-3">

    <h3 class="card-header">Activity [<%= @activity.id%>]</h3>

    <div class="card-body">

      <h5 class="card-title"><%=@activity.title%></h5>
      <h6 class="card-subtitle text-muted"></h6>
      <%= image_tag @activity.image_url, class:"pic1",  alt:"Card image" %>   
      <p id="notice"><%= notice %></p>
       <%=@activity.description%>
        <%= button_to 'Ajouter au panier', carts_path(:activity_id => @activity.id), method: :post, class: "mr-3"%>

    </div>
  </div>
</div>



