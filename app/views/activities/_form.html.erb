<div class="container edit_user_form">
  <% if @activity.errors.any? %>
    <div class="alert alert-danger-form">
    <div id="error_explanation">
    <p> <%= pluralize(@activity.errors.count, "error") %> prohibited this event from being saved:</p>   
        <ul>
        <% @activity.errors.full_messages.each do |message| %>
            <li><%= message %></li>              
        <% end %>
        </ul>
</div>
    </div>
  <% end %>
  <%= form_for @activity do |f| %>

    <div class="form-group">
      <%= f.label :title, "Title" %>
      <em class="sm">  ... minimum 6 characters</em> <br />
      <%= f.text_field :title, autocomplete: "title", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description" %>
      <em class="sm">  ... minimum 20 caracharacters</em> <br />
      <%= f.text_field :description, autocomplete: "description", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price, "Price" %>
      <em class="sm">  ... between 1 and 1000</em> <br />
      <%= f.number_field :price, autocomplete: "price", class: "form-control" %>
    </div>
      <div class="form-group">
      <%= f.label :image_url, "Image link" %>
      <em class="sm">  ... url of your image</em> <br />
      <%= f.text_field :image_url, autocomplete: "image_url", class: "form-control" %>
    </div>
    <div class="actions mt-5 mb-4">
      <%= f.submit "Add this activity", class:"btn btn-md btn-primary btn-block text-uppercase" %>
    </div>

  <% end %>
</div>