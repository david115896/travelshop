<div class="container edit_user_form">


  <%= form_for @user do |f| %>
  <i class="fas fa-user-lock fa-7x"></i><br><br>
  <p class="formEditBody">
    <i class="far fa-user-circle"></i> my <%= f.label :first_name %><br />
    <%= f.text_field :first_name,class: 'formfield' %>
  </p>
  <p>
    <i class="fas fa-users"></i> my <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: 'formfield' %>
  </p>
  <p>
    <i class="fas fa-bed"></i> my <%= f.label :address %><br />
    <%= f.text_area :address, class: 'formfield' %>
  </p>

  <%= f.submit %>

  <% end %>
</div>